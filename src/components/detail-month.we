<template>
  <div class="month-wrap">
    <div class="year-month-box" ondisappear="handleDis" onappear="handleAppear">
      <!-- <text class="year-month-text">{{item.year}}-{{item.month}}</text> -->
    </div>
    <detail-day id="date-{{$index}}"
                repeat="{{day in item.dates}}"
                day="{{day}}"
                month-index="{{monthIndex}}"
                date-index="{{$index}}"
                track-by="day.date">
    </detail-day>
  </div>
</template>

<style>
  .month-wrap {
    margin: 0;
    padding: 15;
    width: 400;
    border-bottom-color: #aaa;
    border-bottom-style: dashed;
    border-bottom-width: 3;
  }
  .year-month-box {
    position: absolute;
    top: -150;
    width: 0;
    height: 0;
    background-color: #1f96f2;
    border-radius: 75px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .year-month-text {
    color: white;
    font-size: 45;
    font-weight: bold;
  }
</style>
<script>
  var store = require('../vuex/store.js');
  module.exports = {
    data: function() {
      return {
        item: {},
        monthIndex: 0
      }
    },
    methods: {
      handleDis: function(e) {
        if (e.direction === 'up') {
          store.commit('changeDisplay', this.monthIndex);
        }
      },
      handleAppear: function(e) {
        if (e.direction === 'down') {
          if (this.monthIndex > 0) {
            store.commit('changeDisplay', this.monthIndex - 1);
          }
        }
      }
    },
    created: function() {
      // this.$on('deleteDay', function(e) {
      //   this.item.dates.splice(e.detail.index, 1);
      //   if (!this.item.dates.length) {
      //     this.$dispatch('deleteMonth', {index: this.monthIndex});
      //   }
      // });
      this.$on('editItem-day', function(e) {
        this.$dispatch('editItem-detail', {
          id: this.item._id,
          year: this.item.year,
          month: this.item.month,
          date: e.detail.date,
          detail: e.detail.detail
        })
      })
    }
  }
</script>
